{
  "github_run_policies": [
    {
      "owner": "my-org",
      "name": "Allowed Actions Policy",
      "repositories": [
        "critical-app",
        "payment-service",
        "user-auth"
      ],
      "policy_config": {
        "enable_action_policy": true,
        "allowed_actions": {
          "actions/checkout": "allow",
          "actions/setup-node": "allow",
          "step-security/harden-runner": "allow"
        },
        "is_dry_run": false
      }
    },
    {
      "owner": "my-org",
      "name": "Secure Runners Policy",
      "all_repos": true,
      "policy_config": {
        "enable_runs_on_policy": true,
        "disallowed_runner_labels": [
          "self-hosted",
          "windows-latest",
          "macos-latest"
        ],
        "is_dry_run": false
      }
    },
    {
      "owner": "my-org",
      "name": "Secrets Protection Policy",
      "all_orgs": true,
      "policy_config": {
        "enable_secrets_policy": true,
        "exempted_users": [
          "dependabot[bot]",
          "renovate[bot]",
          "github-actions[bot]"
        ],
        "is_dry_run": false
      }
    },
    {
      "owner": "my-org",
      "name": "Compromised Actions Protection",
      "all_repos": true,
      "policy_config": {
        "enable_compromised_actions_policy": true,
        "is_dry_run": false
      }
    }
  ]
}